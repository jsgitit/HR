@using HR.Core
@model Employee

<div class="card p-xl-2">
    <div class="card-header d-flex justify-content-between align-items-center py-2 px-3 bg-transparent">
        <h4 class="mb-0 p-2 bg-transparent">@Model.Name</h4>
        <div class="btn-group">
            <a class="btn btn-outline-info btn-lg me-2"
               asp-page="./Detail"
               asp-route-EmployeeId="@Model.Id">
                <i class="fas fa-info-circle fa-1x"></i>
            </a>
            <a class="btn btn-outline-info btn-lg me-2"
               asp-page="./Edit"
               asp-route-EmployeeId="@Model.Id">
                <i class="fas fa-edit fa-1x"></i>
            </a>
            <a class="btn btn-outline-info btn-lg me-2"
               asp-page="./Delete"
               asp-route-EmployeeId="@Model.Id">
                <i class="fas fa-trash-alt fa-1x"></i>
            </a>
        </div>
    </div>

    <div class="card-body">
        <div class="d-flex align-items-center mb-3">
            <label class="form-label w-25">Location</label>
            <div class="form-control border-info flex-grow-1">
                @Model.Location
            </div>
        </div>
        <div class="d-flex align-items-center mb-3">
            <label class="form-label w-25">Employee Type</label>
            <div class="form-control border-info flex-grow-1">
                @Model.EmployeeType
            </div>
        </div>
    </div>
</div>
